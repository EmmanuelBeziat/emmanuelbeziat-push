{% extends "layout/index.njk" %}

{% block header %}
<section class="services-list" id="service-status-list">
	{% if services and services.length %}
		{% for service in services %}
			{% include "partials/service.njk" %}
		{% endfor %}
	{% else %}
		<p>No services</p>
	{% endif %}
</section>
{% endblock %}

{% block main %}
<section class="logs-list">
	{% if logs and logs.length %}
		{% for log in logs | sortByDate %}
			{% include "partials/log.njk" %}
		{% endfor %}
	{% else %}
		<p>No logs found</p>
	{% endif %}
</section>
{% endblock %}
